@model UsuarioView
@{
    ViewData["Title"] = "Cadastro de Usuario";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuário</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Cadastro de Usuário</h2>
        @using (Html.BeginForm("CadastrarUsuario", "Home", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(m => m.Nome, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Digite o nome" })
            </div>
            <br/>
            <div>
                @Html.LabelFor(m => m.Telefone, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", placeholder = "Digite o telefone" })
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.Cargo, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control", placeholder = "Digite o cargo" })
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite o email" })
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.Senha, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Senha, new { @class = "form-control", placeholder = "Digite a senha" })
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.Ativo, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Ativo, new { @class = "form-check-input" })
            </div>
            <br />
            <button type="submit" class="btn btn-success">Cadastrar</button>
        }
        
    </div>

    <!-- Bootstrap JS (para validação de formulário) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script para habilitar a validação do Bootstrap
        (() => {
          'use strict'
          const forms = document.querySelectorAll('.needs-validation')
          Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
              if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
              }
              form.classList.add('was-validated')
            }, false)
          })
        })();
    </script>
</body>
</html>
