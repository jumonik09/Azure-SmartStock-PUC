@model project.Models.Produto

<h2>Editar Produto</h2>

@if (Model != null)
{
    <form asp-action="EditarProduto" method="post">
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.nome" required />
        </div>
        <div class="form-group">
            <label for="Quantidade">Quantidade</label>
            <input type="number" class="form-control" id="Quantidade" name="Quantidade" value="@Model.quantidade" required />
        </div>
        <div class="form-group">
            <label for="Preco">Preço</label>
            <input type="number" class="form-control" id="Preco" name="Preco" value="@Model.preco" step="0.01" required />
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Gestao_de_estoque", "Home")" class="btn btn-secondary">Cancelar</a>
    </form>
}
else
{
    <p>Produto não encontrado.</p>
}